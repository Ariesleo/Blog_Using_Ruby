<div class="section">
	<div class="container">
		<h1 class="title">New Post</h1>

		<%= simple_form_for @post do |f| %>
		<div class="field">
			<div class="control">
				<%= f.input :title, input_html: { class: 'input' }, wrapper: false, label_html: { class: 'label' } %>
			</div>
		</div>
		<div class="field">
			<div class="control">
				<%= f.input :content, input_html: { class: 'text' }, wrapper: false, label_html: { class: 'label' } %>
			</div>
		</div>
		<%= f.button :submit, class: "button is-primary" %>
		<% end %>

	</div>
</div>